<% layout("layout/boilerplate") %>

<div id="filters">
  <div class="filter" onclick="filterCategory('Trending')">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter" onclick="filterCategory('Rooms')">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter" onclick="filterCategory('Amazing Pools')">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter" onclick="filterCategory('Beach')">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>
  <div class="filter" onclick="filterCategory('Mountains')">
    <div><i class="fa-solid fa-train-tram"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter" onclick="filterCategory('Farms')">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter" onclick="filterCategory('Campaign')">
    <div><i class="fa-solid fa-tents"></i></div>
    <p>Campaign</p>
  </div>
  <div class="filter" onclick="filterCategory('Drinks')">
    <div><i class="fa-solid fa-champagne-glasses"></i></div>
    <p>Drinks</p>
  </div>
  <div class="filter" onclick="filterCategory('Arctic')">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter" onclick="filterCategory('Domes')">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div class="filter" onclick="filterCategory('Boats')">
    <div><i class="fa-solid fa-sailboat"></i></div>
    <p>Boats</p>
  </div>

  <div class="tax-toogle">
    <div class="form-check form-switch form-check-reverse">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<% if (allListings.length === 0) { %>
<p class="text-center mt-5">No listings found for this category.</p>
<% } %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
          <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  function filterCategory(category) {
    window.location.href = `/listings?category=${encodeURIComponent(category)}`;
  }

  const taxswitch = document.getElementById("switchCheckDefault");
  const taxinfo = document.getElementsByClassName("tax-info");

  const toggleTaxInfo = () => {
    const isChecked = taxswitch.checked;

    const displayStyle = isChecked ? "inline" : "none";

    for (let info of taxinfo) {
      info.style.display = displayStyle;
    }
  };

  toggleTaxInfo();

  taxswitch.addEventListener("change", toggleTaxInfo);
</script>
